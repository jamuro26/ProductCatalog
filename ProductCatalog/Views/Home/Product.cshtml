@{
    ViewBag.Title = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {

    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/ProductCatalog.js"></script>
}

<div ng-app="Module" id="body">
    <div ng-controller="ProductCatalog">
       
        <h3>Product List</h3>

        <table ng-cloak>
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Price</th>
                    <th>Quantily in stock</th>
                    <th>Size</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="items in productsData">
                    <td hidden="hidden">{{items.Id}}</td>
                    <td>{{items.Name}}</td>
                    <td>{{items.Brand}}</td>
                    <td>{{items.Price}}</td>
                    <td>{{items.QualityInStock}}</td>
                    <td>{{items.Size}}</td>
                    <td>
                        <button ng-model="$scope.Product" ng-click="edit(productsData[$index])">Edit</button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6">
                        <hr />
                    </td>
                </tr>
            </tfoot>
        </table>
        <br />
        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>

        <div ng-show="Product.Id != '' ">
            <div>
                <h2>Update Product</h2>
            </div>
            <div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="Product.Id" />
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="Product.Name" />
            </div>

            <div>
                <label for="brand">Brand</label>
                <input type="text" data-ng-model="Product.Brand" />
            </div>

            <div>
                <label for="price">Price</label>
                <input type="text" data-ng-model="Product.Price" />
            </div>

            <div>
                <label for="qualityInStock">Quantily In Stock</label>
                <input type="text" data-ng-model="Product.QualityInStock" />
            </div>

            <div>
                <label for="size">Size</label>
                <input type="text" data-ng-model="Product.Size" />
            </div>

            <br />
            <div>
                <button data-ng-click="update()">Save</button>
                <button data-ng-click="cancel()">Cancel</button>
            </div>
        </div>

        <div ng-hide="Product.Id != '' ">
            <div>
                <h2>New Product</h2>
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="Product.Name" />
            </div>

            <div>
                <label for="brand">Brand</label>
                <input type="text" data-ng-model="Product.Brand" />
            </div>

            <div>
                <label for="qualityInStock">Quantily In Stock</label>
                <input type="text" data-ng-model="Product.QualityInStock" />
            </div>

            <div>
                <label for="price">Price</label>
                <input type="text" data-ng-model="Product.Price" />
            </div>

            <div>
                <label for="size">Size</label>
                <input type="text" data-ng-model="Product.Size" />
            </div>

            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>
    </div>
</div>

